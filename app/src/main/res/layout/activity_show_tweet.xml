<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/tweet_show_image"
        android:transitionName="tweet_user_image"/>

    <TextView
        android:id="@+id/tweet_show_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tweet_show_image"
        android:textSize="18sp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/tweet_show_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tweet_show_image"
        android:layout_below="@id/tweet_show_user_name"
        android:textSize="18sp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="2dp"
        android:textColor="#808080"/>

    <TextView
        android:id="@+id/tweet_show_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tweet_show_image"
        android:textSize="18sp"/>

    <RelativeLayout
        android:id="@+id/tweet_show_quote_tweet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tweet_show_content"
        android:background="@drawable/border_frame"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        android:padding="2dp">
        <TextView
            android:id="@+id/tweet_show_quote_tweet_user_name"
            android:ellipsize="end"
            android:textSize="18sp"
            android:lines="1"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"/>
        <TextView
            android:id="@+id/tweet_show_quote_tweet_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tweet_show_quote_tweet_user_name"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="18sp"
            android:textColor="#808080"/>
        <TextView
            android:id="@+id/tweet_show_quote_tweet_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tweet_show_quote_tweet_user_name"
            android:maxLines="5"
            android:ellipsize="end"
            android:textSize="18sp"/>
    </RelativeLayout>

    <com.github.ridkins.rud.TweetImageTableView
        android:id="@+id/tweet_show_images"
        android:layout_below="@id/tweet_show_quote_tweet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tweet_show_via"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tweet_show_images"
        android:textSize="18sp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="2dp"
        android:textColor="#808080"/>

    <TextView
        android:id="@+id/tweet_show_timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tweet_show_via"
        android:textSize="18sp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="2dp"
        android:textColor="#808080"/>

</RelativeLayout>